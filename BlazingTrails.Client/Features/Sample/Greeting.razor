@page "/greeting"

<h3>Greeting</h3>

@foreach (var word in _greeting)
{
    <p>@word</p>
}

@code {

    List<string> _greeting = new List<string>();

    protected override async Task OnInitializedAsync()
    {
        _greeting.Add("Welcome");

        await Task.Delay(1000);
        _greeting.Add("to");
        StateHasChanged();

        await Task.Delay(1000);
        _greeting.Add("Blazor in Action");
    }
}
